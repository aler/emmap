{plugins, [pc]}.

{provider_hooks,
 [
  {pre,
   [
    {compile, {pc, compile}},
    {clean, {pc, clean}}
   ]
  }
 ]
}.

{port_specs, [{"priv/emmap_nifs.so", ["c_src/*.cpp"]}]}.

{port_env, [
             %% Make sure to link -lstdc++
             {"(linux|solaris|freebsd|netbsd|openbsd|dragonfly|darwin)",
              "LDFLAGS", "$LDFLAGS -lstdc++"},
             {"(linux|solaris|freebsd|netbsd|openbsd|dragonfly|darwin)",
              "CFLAGS", "$CFLAGS -DNDEBUG"}
            ]}.
